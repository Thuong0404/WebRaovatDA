                    </div>


                </div>


            }


        </div>
        <div class="phanhoi">
            <label style="display: flex; ">
                @if (Model.TaiKhoan.Hinh != null)
                {
                    <img src=" @Model.TaiKhoan.Hinh" width="40" height="40" style=" border-radius: 50%; padding:4px 8px" />
                    <input type="text" class="form-control col-6" id="txtcomment" />
                    <input type="submit" class=" btn btn-danger" id="btncomment" />
                }
                else
                {
                    <img src="/Images/img_avatar.png" width="40" height="40" style="border-radius: 50%; padding: 4px 8px" />
                    <input type="text" class="form-control " id="txtcomment" />
                    <input type="submit" class=" btn btn-danger" id="btncomment" />

                }

            </label>
        </div>
    </div>
</section>
<style>
    .phanhoi {
        display: flex;
        margin: 10px;
        min-width: 100%;
        border-radius: 20px;
    }

    .phanhoi1, .phanhoi2 {
        display: flex;
        margin: 10px;
        min-width: 50%;
        border-radius: 20px;
    }

    .w3-content, .w3-auto {
        margin-left: 2px;
        max-width: 500px;
        float: left;
    }

    .w3-text-white, .w3-hover-text-white:hover {
        color: #fff !important;
    }

    .mySlides {
        display: none;
        width: 495px;
        height: 465px;
    }

    .w3-left, .w3-right, .w3-badge {
        cursor: pointer
    }

    .w3-badge {
        height: 13px;
        width: 13px;
        padding: 0
    }
</style>

<script>
    var slideIndex = 1;
    showDivs(slideIndex);

    function plusDivs(n) {
        showDivs(slideIndex += n);
    }

    function currentDiv(n) {
        showDivs(slideIndex = n);
    }

    function showDivs(n) {
        var i;
        var x = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("demo");
        if (n > x.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = x.length }
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" w3-white", "");
        }
        x[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " w3-white";
    }

    $("#btnChatVoiND").click(function () {
        if ($("#session").val() == 1) {
            //Xử lý.......
            //if ($('txtSs').val() == )
            $.ajax({
                type: 'post',
                url: '/Chat/AddMessage',
                data: {
                    username: $('#txtNguoiBan').val(),
                    noidung: "",
                }, success: function (data) {
                    window.location = "/Chat/Chat";
                }
            })
        } else {
            $("#popup_login").show();
        }
    });


    $(".phanhoi2").hide();
    //nhấn button hiện input
    $(".tl1").click(function () {
         if ($("#session").val() == 1) {
             var a = `<div class="phanhoi1">
                                            <input type="text"   class="form-control " id="txtcomment1" name="noidung" />
                                            <input type="submit" class=" btn btn-danger" name="btncomment1" />
                                        </div> ` ;
        $(this).parent().append(a);
            $(this).attr("disabled", true);
        }
        else {
            $("#popup_login").show();
        }
    });
    // thêm bình luận con
    $(document).on('click', "input[name = 'btncomment1']", function () {
        alert($('.inputbl').val())

        if ($("#txtcomment1").val() != null) {

            $.ajax({
                type: 'post',
                url: '/Home/AddChildBinhLuan',
                data: {
                    idbd: @Model.MaBaiDang,
                    idbl: $('.inputbl').val(),
                    noidung: $('#txtcomment1').val(),
                },
                success: function (data) {
                    if (data.code == 200) {
                        alert("Binh luận thành công")
                        window.location = "/Home/BaiDang/" + @Model.MaBaiDang;
                    }
                }
            })
        } else {
            alert("Bạn chưa nhập bình luận của mình !")
        }
    }
    );




  //thêm cmt cha
    $("#btncomment").click(function () {
        if ($("#session").val() == 1) {
            if ($("#txtcomment").val() != null) {

                $.ajax({
                    type: 'post',
                    url: '/Home/AddBinhLuan',
                    data: {
                        idbaidang: @Model.MaBaiDang,
                        noidung: $('#txtcomment').val(),
                    },
                    success: function (data) {
                        if (data.code == 200) {
                            alert("Binh luận thành công")
                            window.location = "/Home/BaiDang/" + @Model.MaBaiDang;
                        }
                    }
                })
            } else {
                alert("Bạn chưa nhập bình luận của mình !")
            }
        } else {
            $("#popup_login").show();
        }



    });
  //edit cmt cha
    $(document).on('click', "button[name = 'btnedit']", function () {

        var inputString = $(".txtnd").val();
        var a = `<div class="edit">

                                            <input type="text" id="txteditcmt"   class="form-control " value="` + inputString +`" />
                                            <input type="submit" class=" btn btn-danger" name="btneditparent" value="Edit" />
                                        </div> ` ;
        $(this).parent().append(a);
        $(this).attr("disabled", true);
        $(document).on('click', "input[name = 'btneditparent']", function () {
            $.ajax({
                type: 'post',
                url: '/Home/EditCommnent',
                data: {
                    idbaidang: @Model.MaBaiDang,
                    mabl: $('.inputbl').val(),
                    noidung: $('#txteditcmt').val(),
                    username: $('.txtuser').val(),
                },

                success: function (data) {
                    if (data.code == 200) {
                        alert("Cập nhập thành công")
                        location.reload();
                        //window.location = "/Home/BaiDang/" + @Model.MaBaiDang;
                    }
                }
            })
        })
    });

</script>
@section Jsfooter{
    <script>

        $(document).ready(function () {
            $.ajax({
                type: 'get',
                url: '/Home/getTinLienQuan',
                data: {
                    madanhmuc: $('#txtMaDanhMuc').val(),
                    mabaidang: $('.w3-content').attr('id')
                },
                success: function (data) {
                    $('#frmSanPham').empty();

                    $.each(data.listTin, function (k, v) {
                        var t = `<div class="col-lg-2 col-sm-5 pn-product" style="padding:0px; padding:1rem" name="frmSP" id="` + v.MaBaiDang + `">
                                        <div class="product-item">
                                            <div class="pi-pic">
                                                <img src="`+ v.HinhAnh + `" />
                                                <div class="icon">
                                                    <i class="icon_heart_alt" style="color:red"></i>
                                                </div>
                                            </div>
                                            <div class="pi-text">
                                                <a href="#">
                                                    <h5>`+ v.TieuDe + `</h5>
                                                </a>
                                                <div class="product-price">
                                                    `+ v.Gia + ` đ
                                                </div>

                                            </div>
                                        </div>
                                    </div>`;
                        $('#frmSanPham').append(t);
                    });
                }
            })
        });
        $(document).on('click', "div[name = 'frmSP']", function () {
            //alert($(this).attr('id'));
            window.location = '/Home/BaiDang/' + $(this).attr('id');

        });
    </script>
}