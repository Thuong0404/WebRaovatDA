                                        }
                                        else
                                        {
                                            <img src="/Images/img_avatar.png" width="40" height="40" style="border-radius: 50%; padding: 4px 8px" href="/Tindang/Trangcanhan/@item.Username" />


                                        }
                                    </div>
                                    <div>

                                        <h4 href="/Tindang/Trangcanhan/@item.Username" style="margin-bottom:5px; font-weight:bold">@item.TaiKhoan.TenNguoiDung</h4>
                                        <h4 style="color:black; ">@item2.NoiDung</h4>
                                        <button style="bottom:0px;" class="btn  " name="btnphanhoi" id="btnphanhoi2">Phản hồi</button>
                                        <button style="bottom:0px;" class="btn  " name="btnphanhoi" id="btnedit2">Chỉnh sửa</button>
