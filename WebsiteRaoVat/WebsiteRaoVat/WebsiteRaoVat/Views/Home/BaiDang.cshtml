                                    </div>
                                    @*<div class="phanhoi2">
                                            <input class="idbl " id="@item2.MaBL" type="hidden" />
                                            <input type="text" class="form-control " id="txtcomment2" />
                                            <input type="submit" class=" btn btn-danger" id="btncomment2" />
                                        </div>*@
                                </div>
                            }

